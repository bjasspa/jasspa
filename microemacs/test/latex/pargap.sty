    \everypar{}\linewidth\hsize 
    \@totalleftmargin\z@ \leftskip\z@ \rightskip\z@ \@rightskip\z@ 
    \parfillskip\@flushglue \lineskip\normallineskip 
    \baselineskip\normalbaselineskip\sloppy}

