!if &les @# 1
    ; if executed with an argument of 0 or less, return the list
    set-variable %font-names  "|ISO-8859-1 (Latin 1)|ISO-8859-1 (box)|XTerm ISO-8859-1 (box)|Windows ANSI|Windows ANSI (box)|Windows OEM|Windows OEM (box)|PC Code Page 437|PC Code Page 850|"
    set-variable %font-value  "||ISO-box|XTerm-box|Win-ANSI|Win-ANSI-box|Win-OEM|Win-OEM-box|PC-437|PC-850|"
    !return
!endif
; get the users display font
