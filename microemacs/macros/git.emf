    ;    osd @# 55 "" "Copy items"
    osd @# 60 "" "Move items"
    osd @# 70 "" "Add items"
    osd @# 80 "" "Remove items"
    osd @# 120 "" "Resolve conflicts"
  !endif
  !if &equ :tag-count 1
    osd @# 40 "" "Item \HLog"          f git-log
    osd @# 50 "" "Item \HBlame"        f git-blame
  !else
    osd @# 40 "" "Item Log"
    osd @# 50 "" "Item Blame"
  !endif
!emacro

