    indent .hilight.asmx86 n "{"  t
    indent .hilight.asmx86 o "}" -t
    indent .hilight.asmx86 e "\"" "\"" "\\"
    indent .hilight.asmx86 b "\\[" "]"
    indent .hilight.asmx86 b "(" ")"
    indent .hilight.asmx86 c "\\\\\\s" 3/2t
