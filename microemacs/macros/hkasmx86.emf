    set-variable .osd.asmx86-help &pinc .osd.next 1
    set-variable .osd.asmx86-tool &pinc .osd.next 1
!endif
!if &not &exist .hilight.asmx86
    set-variable .hilight.asmx86 &pinc .hilight.next 1
!endif
