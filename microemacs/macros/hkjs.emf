    hilight .hilight.js 2  "//"            .scheme.comment
    hilight .hilight.js 20 "/\\*" "*/" ""  .scheme.comment
    hilight .hilight.js 4 "\"" "\"" "\\"   .scheme.string
    hilight .hilight.js 0x804 "\\W\\{'" "'" "\\" .scheme.quote
