        ; function definitions
        hilight .hilight.js 0 "\\s\\{function\\s+\\w+\\s?\\}(" .scheme.function
    !endif
    ; let html based files use the java hilight for any JavaScripts
    set-variable .hilight.javascript .hilight.js
!endif
!if &sin "d" .fhook-js.setup
    ; create a simple indentation rule for javascript - real java files use the built in C indentation
    0 indent .hilight.js 1 20
    indent .hilight.js n "{"  t
    indent .hilight.js o "}" -t
    indent .hilight.js e "\"" "\"" "\\"
    indent .hilight.js e "\'" "\'" "\\"
    indent .hilight.js b "\\[" "]"
    indent .hilight.js b "(" ")"
    indent .hilight.js b "/\\*" "\\*/"
    indent .hilight.js i "//"  
    set-variable .indent.javascript .hilight.js
!endif

buffer-init-fhook "js"

