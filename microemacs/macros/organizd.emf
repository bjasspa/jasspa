osd .osd.orgd 75 "fh" " "
osd .osd.orgd 80 "Etxfh" 4 "#####" f org-day-change-year
osd .osd.orgd 100 "BtxrfRhT" 5 " -&> "  1 org-day-inc-day
osd .osd.orgd 110 "rf" "    "
osd .osd.orgd 120 "" 
osd .osd.orgd 190 "Sf" "    &Notes" 200 
osd .osd.orgd 200 "EtNcfHxz" 6 .scheme.osd-entry 56 27 "" f org-day-set-notes
osd .osd.orgd 600 "" 
osd .osd.orgd 605 "" 
osd .osd.orgd 610 "BtxhcfH" 7 .scheme.osd-ebtt " &Save "    f organizer-save
osd .osd.orgd 620 "BtxhcfH" 8 .scheme.osd-ebtt " Day to &Buffer "  f org-day-buffer
osd .osd.orgd 630 "BtcfH"   9 .scheme.osd-ebtt " E&xit "    1 void

