; Macro to redefine the wrapping behavior of the *compile* buffer and disable
; word wrapping. 
0 define-macro my-fhook-ipipe
    !if &seq $buffer-bname "*compile*"
        -1 buffer-mode "wrap"
    !endif
!emacro
