0 define-macro spell-rules-init
!emacro

set-variable .spell.rules "ABCDEFIKMORSUXYZabcdefghijmnpstvwxyz"

; reset the spell rules
0 add-spell-rule

; disable hyphen
  add-spell-rule "-" "n"
  
; Now add the Portugues spell rules
; prefixes

;flag *A:                   # anti
-2 add-spell-rule "A" "" "" "anti"            ; "FSEM=anti"       # ex. venenoso -> antivenenoso
;flag *B:                   # -anti
-2 add-spell-rule "B" "" "" "anti-"           ; "FSEM=anti"       # ex. semita -> anti-semita

;flag *S:                   # des
-2 add-spell-rule "S" "[^h]" "" "des"         ; "FSEM=not"       # ex. amarrar -> desamarrar
-2 add-spell-rule "S" "h" "h" "des"           ; "FSEM=not"       # ex. habitar -> desabitar

;flag *I:                   #in
-2 add-spell-rule "I" "[^plmr]" "" "in"       ; "FSEM=not"    # ex. finito -> infinito
-2 add-spell-rule "I" "p" "" "im"             ; "FSEM=not"    # ex. paciente -> impaciente
-2 add-spell-rule "I" "[lm]" "" "i"           ; "FSEM=not"    # ex. material -> imaterial
-2 add-spell-rule "I" "r" "" "ir"             ; "FSEM=not"    # ex. real -> irreal

;flag *R:                   #re
-2 add-spell-rule "R" "[^s]" "" "re"          ; "FSEM=outra"     # ex. encontrar -> reencontrar
-2 add-spell-rule "R" "s" "" "res"            ; "FSEM=outra"     # ex. surgir -> ressurgir

;flag *E:                   #pre
-2 add-spell-rule "E" "" "" "pré-"            ; "FSEM=pre"       # ex. escolar -> pré-escolar

;flag *O:                   #pos
-2 add-spell-rule "O" "" "" "pós-"            ; "FSEM=pos"       # ex. guerra -> pós-guerra

;flag *U:                   #sub
-2 add-spell-rule "U" "" "" "sub-"            ; "FSEM=sub"       # ex. problema -> sub-problema

;suffixes

;-----------------------------------------
;plurais - os mais habituais
;flag *p:         # "CAT=a_nc,N=s"      #plurais
 2 add-spell-rule "p" "[^ã][^lsmrnzx]" "" "s" ; "N=p"         # -> s         ex. pato, patos
 2 add-spell-rule "p" "ãe" "" "s"             ; "N=p"         # ãe -> ães    ex. mãe, mães
 2 add-spell-rule "p" "ão" "ão" "ões"         ; "N=p"         # ão -> ões    ex. leão, leões
