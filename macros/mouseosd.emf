;
; MENU 28 - Sort lines.
; Simple menu for options for the sort lines item. Used in the Pop-up menus.
;
osd 28 0  b
osd 28 1  "" "&Case Sensitive"       f sort-lines
osd 28 2  "" "&Ignore Case"          f sort-lines-ignore-case
;
; The following is the osd behaviour determined by the position of the mouse
define-macro mouse-osd-multi
    set-variable #l0 &band $mouse-pos 15
    !if &equ #l0   0
        ; Text window - must goto the original position or cut etc wont work - must dup the position
        0 show-region
        set-variable #l2 $result
        goto-position "\x82"
        !if &and &gre $mouse-x 20 &les &sub $screen-width $mouse-x 33 
            osd 27 7  "Mdw" "Sort &Lines"      28
            osd 27 9  "Mdw" "H&ilight Line"    .osd.tmp osd-line-scheme
            osd 27 14 "Mdw" "&Buffer"          20 osd-1-buffer
            osd 27 15 "Mdw" "&Quick Open"      19
        !else
            osd 27 7  "Md"  "Sort &Lines"      28
            osd 27 9  "Md"  "H&ilight Line"    .osd.tmp osd-line-scheme
            osd 27 14 "Md"  "&Buffer"          20 osd-1-buffer
            osd 27 15 "Md"  "&Quick Open"      19
        !endif
        !if &band #l2 1
            !force show-region
        !endif
        27 osd
    !elif &equ #l0 1
        ; Message line
        void
    !elif &equ #l0 2
        ; Mouse on Mode line
        23 osd
    !elif &and &gre #l0 2 &les #l0 10
        ; Mouse on scroll bar
        25 osd
    !elif &equ #l0 10
        ; Mouse on corner
        23 osd
    !elif &equ #l0 11
        ; menu line
        0 osd
    !endif
    ; goto the original window
    1 goto-position "\x82"
!emacro

define-macro mouse-osd
    ; goto the original position
    goto-position "\x82"
    0 osd
!emacro

