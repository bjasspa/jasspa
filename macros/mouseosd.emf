osd 27 2  ""   "&Copy"             f copy-region    ; Copy the region
osd 27 3  ""   "&Paste"            f osd-mouse-yank ; Paste text
osd 27 4  "-"
osd 27 5  "i"  "&Find tag"         1 "3 find-tag @y"
osd 27 6  ""   "Find &help"        f osd-find-help
osd 27 7  "Md" "Sort &Lines"      28
osd 27 8  ""   "Restyle &Region "  f restyle-region
osd 27 9  "Md" "H&ilight Line"     .osd.tmp osd-line-scheme
osd 27 10  "-"
osd 27 11 ""   "Spell Buffer"      f spell-buffer
osd 27 12 ""   "&Save Buffer"      f save-buffer    ; Save the buffer
osd 27 13 ""   "&Close Buffer"     f osd-close      ; close the buffer
