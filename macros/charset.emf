!if &les @# 1
    ; if executed with an argument of 0 or less, return the list
    set-variable %charset-names  "|ISO-8859|ISO-8859 with box chars|Windows ANSI|Windows OEM|Windows GREEK|Windows TURKISH|Windows RUSSIAN|PC Code Page 437|PC Code Page 850|Cyrillic koi8-r|"
    set-variable %charset-value  "||ISO-box|Win-ANSI|Win-OEM|Win-GREEK|Win-TURK|Win-RUS|PC-437|PC-850|koi8-r|"
    set-variable %charset-types  "|||0|255|161|162|204||||"
    !return
!endif
; get the users display char set
set-variable #l0 &reg "/history" &cat %platform "/char-set" ""
set-variable #l1 1
set-variable .change-font.type 0
!if &seq #l0 ""
    set-char-mask "M" ""
!elif &seq #l0 "ISO-box"
    set-char-mask "M" ""
    set-char-mask "dp" "\CY\CM\CL\CN\CK\CX\CU\CO\CV\CW\CR\CP\CQ\C^\C_"
    set-char-mask "p"  "\CI\CJ"
